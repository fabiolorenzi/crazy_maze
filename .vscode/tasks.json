{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Install dependencies",
			"command": "cmake -S . -B build",
			"group": "build",
			"detail": "CMake install dependencies"
		},
		{
			"type": "shell",
			"label": "Build Dev",
			"command": "cmake --build build --config Debug",
			"group": "build",
			"detail": "CMake dev build"
		},
		{
			"type": "shell",
			"label": "Build Release",
			"command": "cmake --build build --config Release; cp -r assets build/bin/Release",
			"group": "build",
			"detail": "CMake release build"
		},
		{
			"type": "shell",
			"label": "Run Dev",
			"command": "./build/bin/Debug/crazy_maze.exe",
			"group": "build",
			"detail": "Run dev build"
		},
		{
			"type": "shell",
			"label": "Run Release",
			"command": "./build/bin/Release/crazy_maze.exe",
			"group": "build",
			"detail": "Run release build"
		}
	]
}